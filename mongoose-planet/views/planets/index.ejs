<%- include('../partials/header') %>
<%- include('../partials/nav') %>
<h2>Planet List</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      
      <!-- <th>Climate</th> -->
      <!-- <th>Population</th> -->
    </tr>
  </thead>
  <tbody>
     <% planets.forEach(planet => { %>
     <tr>
        <td><%= planet.name %></td>
        <td><a href="/planets/<%= planet._id %>">DETAILS</a></td>
        <td>
          <form action="/planets/<%= planet._id %>?_method=DELETE" method="POST"
            onsubmit="return confirm('Are you sure you want to delete this planet?')">
            <button type="submit">DELETE</button>
          </form>
        </td>
        </tr>
      <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>